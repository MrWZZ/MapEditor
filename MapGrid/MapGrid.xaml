<UserControl x:Class="MapGrid.MapGridItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapGrid"
             mc:Ignorable="d" 
             Width="50" Height="50" SizeChanged="UserControl_SizeChanged">
    <Grid>
        <Border x:Name="borderSelect" BorderThickness="1" BorderBrush="Blue"></Border>
        <Grid x:Name="gBg" Opacity="0.2" Background="Red"/>
        <Label x:Name="txtType" Content="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
    </Grid>
</UserControl>
